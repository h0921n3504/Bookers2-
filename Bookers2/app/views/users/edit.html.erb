<main>
    <% if @user.errors.any? %>
  <div id= "error_explanation" >
    <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

 <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
       <div><%= f.text_field :name,autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %></div>
      </div>
     <div class="form-group">
        <label for="user_image">Image</label>
        <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <div><%= f.text_field :introduction,autofocus: true, id:"inputIntroduction", class:"form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>



         </div>
         <% end %>
     </form>
     </div>
</div>

      </div>
